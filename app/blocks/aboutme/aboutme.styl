.aboutme
	
	&__content
		width 1460px
		margin 75px auto 80px auto
		
	&__wraper
		display inline-block
		width 680px
		vertical-align top
		padding 90px 0 0 50px
		
		&:after
			content ''
			display block
			sprite $sign
		
	&__title
		text-transform uppercase
		font-size 60px
		line-height 48px
		color rgb(32, 32, 32)
		margin-bottom 80px
		
	&__text
		color rgb(32, 32, 32)
		margin-bottom 70px
		font-size 24px
		line-height 50px
	