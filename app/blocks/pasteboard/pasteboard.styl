.pasteboard
	background-color rgb(200, 200, 200)
	center(600px, 300px)
	padding 0.5% 2%
	border-radius 10%
	font-family BadScriptRegular
	font-size 16px
	font-weight bold
	box-shadow 2px 5px 10px 2px rgba(100,100,100,.8)
	
	&__close
		background #606061
		color #FFFFFF
		line-height 25px
		position absolute
		right 0px
		text-align center
		top 0px
		width 40px
		text-decoration none
		font-weight bold
		-webkit-border-radius 12px
		-moz-border-radius 12px
		border-radius 12px
		-moz-box-shadow 1px 1px 3px #000
		-webkit-box-shadow 1px 1px 3px #000
		box-shadow 1px 1px 3px #000

		&:hover 
			background #00d9ff
